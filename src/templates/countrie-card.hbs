{{#each this}}
  <div class='box'>
    <div class='card'>
      <h2 class='card__title'>{{name}}</h2>
      <img src='{{flags.svg}}' alt='{{name}}' class='card__img' />

      <ul class='stats'>
        <li class='stats__item'>
          <p class='stats__text'>CAPITAL:
            <span class='stats__subtext'>{{capital}}</span></p>
        </li>
        <li class='stats__item'>
          <p class='stats__text'>Population:
            <span class='stats__subtext'>{{population}}</span></p>
        </li>
        <li class='stats__item'>
          <p class='stats__text'>STATS:
            {{#each languages}}
              <span class='stats__subtext'>{{name}}</span>
            {{/each}}
          </p>
        </li>
      </ul>
    </div>
    <div class='gallery'>
      <div class='lds-spinner is-hide'><div></div><div></div><div></div><div
        ></div><div></div><div></div><div></div><div></div><div></div><div
        ></div><div></div><div></div></div>
    </div>
  </div>
{{/each}}